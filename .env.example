# PostgreSQL Configuration
POSTGRESQL_DB_HOST=
POSTGRESQL_DB_PORT=
POSTGRESQL_DB_USER=
POSTGRESQL_DB_PASSWORD=
POSTGRESQL_DB_NAME=

# Application Settings
DEBUG=true
AUTH_TOKEN=simple-drive-secret-token

# Storage Backend (s3, database, local, ftp)
STORAGE_BACKEND=local

# S3 Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=simple-drive
S3_REGION=us-east-1

# Local Storage
LOCAL_STORAGE_PATH=./storage

# Database Storage
DB_STORAGE_TABLE=blob_storage

# FTP Configuration (Bonus)
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USERNAME=username
FTP_PASSWORD=password
FTP_DIRECTORY=/simple-drive